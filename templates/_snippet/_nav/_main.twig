{% set mainNav = craft.navigate.raw('mainNav') %}
{% set searchResultsEntry = craft.entries.section('searchResults').one() %}

{% if mainNav|length %}
	<nav class="" aria-label="{{ 'Main'|t }}">
		<ul class="mb-5 space-x-0 space-y-2 md:mb-0 md:flex md:flex-row md:flex-wrap md:space-x-10 md:space-y-0 lg:space-x-20 sm:flex sm:flex-col">
			{% for node in mainNav %}
				<li class="{% if node.classes|length %}{{ node.classes }}{% endif %}">
					<a href="{{ node.url }}" class="text-xl text-primary hover:text-secondary {% if node.active %}text-secondary{% endif %}" {% if node.blank %} target="_blank" rel="noopener" {% endif %}>{{ node.name }}
					</a>
				</li>
			{% endfor %}
		</ul>
	</nav>
{% endif %}
