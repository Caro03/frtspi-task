{% set bgDefault = block.backgroundColor == 'section--default' and block.text|length ? '' : '' %}
{% set bgPrimary = block.backgroundColor == 'section--primary' and block.text|length ? 'bg-primary' : '' %}
{% set bgLight = block.backgroundColor == 'section--light' and block.text|length ? 'bg-light' : '' %}
<div class="section section--default">
	<div class="container">
	<div class="py-10 {{ bgPrimary }} {{ bgLight }} {{ bgDefault }}">
		<div class="w-full ml-auto mr-auto block text-center {% if settings.centered is not defined %}md:w-8/12{% endif %}">
			<blockquote>
				<div class="font-accent text-2xl {% if bgPrimary %}text-light{% else %}text-primary{% endif %}">{{ block.text }}</div>
				{% if block.writer|length %}
					<footer class="mt-4 {% if bgPrimary %}text-light{% else %}text-secondary{% endif %}">{{ block.writer }}</footer>
				{% endif %}
			</blockquote>
			{% if block.cta|length %}
				<div class="inline">
					{% for cta in block.cta.all() %}
						{% include '_snippet/_content/_blocks/_cta' %}
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
	</div>
</div>
