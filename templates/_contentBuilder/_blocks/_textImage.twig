<div class="section section--default">
	<div class="container">
        <div class="flex">
            <div class="flex flex-col">
                {% if block.blockTitle %}
            <div>
                <h2 class="text-primary">{{ block.blockTitle }}</h2>
            </div>
                {% endif %}

            <div class="w-3/5">
                <p>{{ block.text }}</p>
            </div>
            <div>
                {% if block.cta|length %}
			<div class="flex flex-wrap items-baseline">
				{% for cta in block.cta.all() %}
					{% include '_contentbuilder/_blocks/_cta' %}
				{% endfor %}
			</div>
		        {% endif %}
            </div>
            </div>
                {% set image = block.image.one() %}
                {% if image %}
            <div>
                <img src="{{ image.url }}">
            </div>
                {% endif %}
        </div>
    </div>
</div>